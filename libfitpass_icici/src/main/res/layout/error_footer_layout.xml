<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:id="@+id/ll_error_base"
    android:gravity="center"
    android:visibility="visible"
    android:layout_gravity="bottom"
    android:fitsSystemWindows="false"
    android:minHeight="60dp"
    android:focusable="false"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_fitfeast_greetings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:elevation="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:minWidth="250dp"
        app:cardBackgroundColor="@color/watermelon_two"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="10dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:paddingBottom="3dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.fitpass.libfitpass.fontcomponent.FitpassFontAwesome
                    android:id="@+id/fa_info"
                    android:layout_width="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content">
                </com.fitpass.libfitpass.fontcomponent.FitpassFontAwesome>

                <TextView
                    android:id="@+id/tv_server_error_message"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:layout_marginRight="10dp"
                    android:gravity="center|left"
                    android:textSize="12sp"
                    android:minLines="2"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="18dp"
                    android:letterSpacing="0.1"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:text="asffasfasfasfasfafafasfasf"/>
                <TextView
                    android:id="@+id/tv_retry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spf_prodisplay_regular"
                    android:layout_marginRight="10dp"
                    android:gravity="center|right"
                    android:textSize="12sp"
                    android:minLines="1"
                    android:visibility="gone"
                    android:letterSpacing="0.1"
                    android:layout_gravity="right|center"
                    android:textColor="#ffffff"
                    android:text="@string/try_now"/>
            </LinearLayout>

        </FrameLayout>

        <com.fitpass.libfitpass.fontcomponent.FitpassFontAwesome
            android:id="@+id/fa_error_cross"
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:gravity="right"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right|top"
            android:alpha=".4"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp"
            android:textColor="#ffebf5"
            android:layout_height="wrap_content">
        </com.fitpass.libfitpass.fontcomponent.FitpassFontAwesome>
    </androidx.cardview.widget.CardView>
</LinearLayout>